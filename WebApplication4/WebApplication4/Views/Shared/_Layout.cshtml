<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <title>Playback</title>
    
</head>
<body>

    <nav class="navbar-fixed-top">
    <div class="nav">
    <div class="container">
        <div class="logo"><a href="#">Playback</a></div>
        <div class="main">
            <ul class="nav-link">
                <li><a href="#">HomePage</a></li>
                <li><a href="#">Sign Up</a></li>
                <li><a href="#">Search</a></li>
                <li><a href="#">Profile</a></li>
            </ul>
        </div>
    </div>
    </div>
    </nav>
    <div class="container body-content">
        @RenderBody()


    </div>

   

    @RenderSection("scripts", required: false)
    <style>
        label, h4 {
            color: white;
        }

        div.navbar-collapse collapse {
            color: #000000;
        }

        input.btn {
            background-color: #d89898;
            border-color: #d89898;
        }

        body {
            background-color: #1E163A;
        }

        a {
            color: white;
            text-decoration: none;
            
        }

        #head {
            float: left;
        }

        .nav {
            width: 100%;
            height: 50px;
            position: fixed;
            line-height: 65px;
            text-align: center;
        }

        .nav div.logo {
            float: left;
            width: auto;
            height: auto;
            padding-left: 3rem;
        }

            .nav div.logo a {
                text-decoration: none;
                color: white;
                font-size: 2rem;
                position: relative;
                bottom: 20px;
            }

        .nav div.main {
            height: 50px;
            float: right;

        }


        .nav div.main ul {
            width: 100%;
            height: 50px;
            display: flex;
            list-style: none;
            margin: 0;
            padding: 0;
            position: relative;
            bottom: 20px;
        }

        .nav div.main ul li {
            width: auto;
            height: 50px;
            padding: 0;
            padding-right: 3rem;
        
        }

        .nav div.main ul li a {
             text-decoration: none;
             color: #fff;
             line-height: 65px;
             font-size: 2rem;
        }

        .nav {
            padding-top: 20px;
            padding-bottom: 20px;
            -webkit-transition: all 0.4s ease;
            transition: all 0.4s ease;
        }

        .nav-active {
            background: black;
            height: 60px;
        }



    </style>
   <script>
       const navbar = document.querySelector('.nav');

       window.onscroll = () => {
           if (window.scrollY > 200) {
               navbar.classList.add('nav-active')
           } else {
               navbar.classList.remove('nav-active')
           }

       }
   </script>
    </body>
    </html>
