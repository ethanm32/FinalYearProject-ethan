@model WebApplication4.Models.BigModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/Fonts/webfontkit-20230222-113905/stylesheet.css">
    <meta name="viewport" content="width=device-width, minimum-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="https://fonts.cdnfonts.com/css/circular-std" rel="stylesheet">
    <title>Playback</title>

</head>
<body>

    <nav class="navbar navbar-fixed-top">
        <div class="container" id="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div style="position:relative; top: 20px;"class="logo"><a href='@Url.Action("HomePage", "User")'>Playback</a></div>
            </div>
            <div id="navbar-collapse" class="main collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="profile"><a href='@Url.Action("Profile", "User")'><img style="border-radius: 50%; border: none; width: 20px; height: 20px;background-size:cover" src="data:image/png;base64,@Convert.ToBase64String(Model.UserModel.picture)" /> @Html.DisplayFor(o => o.UserModel.username)</a></li>
                    <li class="search-bar"><input type="search" id="search" name="q" placeholder="Search for some music.."></li>
                </ul>
            </div>
        </div>
    </nav>
    <div id="img-container"></div>
    
    <div class="text">
        <h3>Rate and Review the Music you love</h3>
        <button id="buttonSignUp">SIGN UP NOW</button>
    </div>
    <div id="background">

    </div>
    <div id="songs">
        <h4>Top Songs this Week</h4>
        <br />
        <div id="containSongs">

        </div>
        <div>
            hello
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()


    </div>



    @RenderSection("scripts", required: false)
<style>


        html, body

        {
            max-width: 100%;
            overflow-x: hidden;
            padding: 0;
            margin: 0;
        }

        label, h4 {
            color: white;
        }

        div.navbar-collapse collapse {
            color: #000000;
        }

        input.btn {
            background-color: #d89898;
            border-color: #d89898;
        }

        body {
            background-color: #14181C;
            font-family: 'Circular Std';
        }

        a {
            color: white;
            text-decoration: none;
        }

        #head {
            float: left;
        }



        #list {
            position: absolute;
            top: 58px;
            height: 300px;
            left: 2%;
            z-index: 9998 !important;
        }

        hr {
            width: 96%;
            color: #FFFF00;
            padding: 0px;
            margin: 0px;
        }


        #containSongs {
            height: 300px;
            background-attachment: scroll;
        }


        #background {
            background: url("https://media.pitchfork.com/photos/5e17c6a4516bdd0008561c76/2:1/w_2776,h_1388,c_limit/beatles-abbey-road.jpg");
            background-repeat: no-repeat;
            background-size: 100vw;
            background-position-x: 100vw;
            background-position-y: 100px;
            box-shadow: inset -150px 80px 80px 0 #14181C,inset 10px 80px 80px 0 #14181C, 0 80px 80px 80px #14181C;
            background-attachment: local;
        }

        input[type="search"] {
            border-radius: 10px;
            position: relative;
            height: 40px;
            width: 300px;
            background-color: white;
            border-color: #13171B
        }

        .icon-bar {
            background-color: white;
        }


        @@media (max-width: 767px) {
            .navbar-nav.navbar-right {
                float: none !important;
                text-align: center;
                margin-top: 0;
            }

            .navbar-nav > li {
                display: inline-block;
                float: none;
            }

            #search {
                width: 100%;
                margin: 0 auto;
                position: relative;
                top: 20px;
            }

            .navbar-default .navbar-collapse {
                text-align: center;
            }

            .profile {
                
                top: 5px;
                padding-top: 5px;
                text-align: center;
                position: absolute;
                left: 40%;
                transform: translateX(-50%);
            }

            .search-bar {
                margin-top: 10px;
                clear: both;
                top: 30px;
                text-align: center;
                position: absolute;
                left: 10%;
                transform: translateX(-50%);
            }

            .navbar-default .navbar-collapse {
                text-align: center;
                transition: height 0.3s ease-in-out;
                height: 80px;
                overflow: hidden;
            }

                .navbar-default .navbar-collapse.in {
                    height: auto;
                }

           

            #navbar-collapse {
                height: 100px;
            }

            
        }

        @@font-face {
            font-family: myFont;
            src: url(/Content/Fonts/webfontkit-20230222-113905/circularstd-medium-webfont.woff)
        }

        body {
            font-family: myFont;
        }


</style>
    <script>
        const navbar = document.querySelector('.nav');

        window.onscroll = () => {
            if (window.scrollY > 100) {
                navbar.classList.add('nav-active')
            } else {
                navbar.classList.remove('nav-active')
            }

        }

     



        $("#search").on('keyup', function (e) {
            if (e.key === 'Enter' || e.keyCode === 13) {
                var input = document.getElementById("search").value;
                console.log(input)
                localStorage.setItem("input", input);
                window.location.href = '@Url.Action("Search", "User")';
            }
        })



    </script>
</body>
</html>
