@model WebApplication4.Models.UserModel
@{
    Layout = null;

}


@{
    ViewBag.Title = "Login";
}

<body>
    <link rel="stylesheet" href="~/Fonts/webfontkit-20230222-113905/stylesheet.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <div id="logo">
        <a href="/User/HomePage"><img src="https://i.ibb.co/TvLjbq4/Playback-logos-transparent.png"></a>
    </div>

    <div id="login-container">

        <h3>Login</h3>
        <br />
        <br />
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            @Html.Label("username", "Username", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                <br />
            </div>


            @Html.Label("password", "Password", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                <br />
            </div>

            <div class="col-md-10" style="color: white;">
                <br />
                <input type="submit" value="Login" class="btn btn-default" />
                @Html.Raw(@ViewBag.ErrorContent)
            </div>

            <div class="col-md-10">
                @Html.ActionLink("Need to Sign Up? Click here", "SignUp")
            </div>
        }
    </div>
</body>

<style>
    @@font-face {
        font-family: myFont;
        src: url(/Content/Fonts/webfontkit-20230222-113905/circularstd-medium-webfont.woff);

    }

    label, h4 {
        color: white;
    }

    div.navbar-collapse collapse {
        color: #000000;
    }

    input.btn {
        background-color: #d89898;
        border-color: #d89898;
    }

    .form-group {
        transform: translate(250px, 300px);
    }

    #password {
        width: 100%;
        height: 35px;
        border-radius: 5px;
    }

    h4 {
        transform: translate(550px, 250px);
    }

    .col-md-10 {
        width: 30em;
    }

    #login-container {
        border: 5px solid black;    
        position: absolute;
        top: 50%;
        right: 50%;
        transform: translate(50%,-50%);
        width: 30%;
        height: 50%;
        padding-top: 20px;
        border-radius: 10px;
        background-color: rgba(0, 0, 0, 0.5);
        overflow-x: auto;
    }

    body {
        font-family: 'Circular Std', sans-serif;
        background-color: #14181C;
    }

    .col-md-10 {
        width: 100%;
        text-align: center;
    }

    h3 {
        text-align: center;
        color: white;
    }

    .btn btn-default {
        margin: 0;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    img {
        float: left;
        width: 200px;
        height: 200px;
    }

    @@media screen and (max-width: 1000px) {
        #login-container {
            width: 60%;
            height: 35%;
        }
    }

    @@media screen and (max-width: 600px) {
        #login-container {
            width: 100%;
            height: 100%;
            padding-top: 55%;
        }

        #logo {
            position: absolute;
            top: 20%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
    }

    @@media screen and (orientation:landscape) and (max-width: 900px) {
        #login-container {
            width: 100%;
            height: 100%;
            padding-top: 5%;
        }

        #logo {
            position: absolute;
            top: 20%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
    }
    
</style>



<script>
    $(document).ready(function () {
        $("#login-container").fadeIn(5000); // fade in over 2 seconds (2000 milliseconds)
    });

</script>


